<% provide(:title, "Send Email") %>
<h1>Send Email</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:mail_send, url: mail_sends_path) do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
