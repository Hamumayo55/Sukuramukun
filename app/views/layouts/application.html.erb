<!DOCTYPE html>
<html>
    <head>
        <title>Sukuramukun</title>
        <%= csrf_meta_tags %>
        <%= csp_meta_tag %>

        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <body>
        <header>
            <a href="/" class="m-0"><%= image_tag "header.png", id: "header-img" %></a>
            <div id="header-right" class="text-right">
                <a id="scrumguide" href="https://www.scrumguides.org/docs/scrumguide/v2017/2017-Scrum-Guide-Japanese.pdf">ScrumGuide</a>
                <%= link_to 'Timer','/watch' ,id: "stopwatch"%>
            </div>
        </header>

        <%= yield %>
    </body>
</html>
